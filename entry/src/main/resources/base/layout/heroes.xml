<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:width="match_parent"
        ohos:height="match_parent"
        ohos:orientation="vertical"
        ohos:padding="20vp">

    <DirectionalLayout
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:orientation="horizontal">

        <Button
                ohos:id="$+id:button_dashboard"
                ohos:width="150vp"
                ohos:height="40vp"
                ohos:text="$string:dashboard"
                ohos:text_size="20fp"
                ohos:text_alignment="center"
                ohos:background_element="$graphic:gray_button_element"/>

        <Button
                ohos:width="150vp"
                ohos:height="40vp"
                ohos:left_margin="20vp"
                ohos:text="$string:heroes"
                ohos:text_size="20fp"
                ohos:text_alignment="center"
                ohos:background_element="$graphic:gray_button_element"/>
    </DirectionalLayout>

    <Text
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text="$string:my_heroes"
            ohos:text_size="25fp"
            ohos:top_margin="20vp"
            ohos:bottom_margin="20vp"/>

    <DirectionalLayout
            ohos:width="match_content"
            ohos:height="50vp"
            ohos:orientation="horizontal">

        <Text
                ohos:width="match_content"
                ohos:height="match_content"
                ohos:text="$string:hero_name"
                ohos:text_size="20fp"/>

        <TextField
                ohos:id="$+id:hero_name"
                ohos:width="300vp"
                ohos:height="40vp"
                ohos:left_margin="20vp"
                ohos:text_size="20fp"
                ohos:text_alignment="vertical_center"
                ohos:padding="4vp"
                ohos:background_element="$graphic:black_border_element"/>

        <Button
                ohos:id="$+id:button_add"
                ohos:width="100vp"
                ohos:height="40vp"
                ohos:text="$string:add"
                ohos:text_size="20fp"
                ohos:text_alignment="center"
                ohos:left_margin="20vp"
                ohos:background_element="$graphic:gray_button_element"/>
    </DirectionalLayout>

    <ScrollView
            ohos:id="$+id:scroll_view"
            ohos:width="match_parent"
            ohos:height="240vp"
            ohos:rebound_effect="true"
            ohos:top_margin="20vp"/>
</DirectionalLayout>